# Semi-complete docker-compose for the slack-export-viewer container
# By Reid Sox-Harris, 08 October 2022

networks:
  {{ proxy_network_name }}:
    external: true

services:
  slack:
    container_name: slack-export-viewer
    build: .
    networks:
      - {{ proxy_network_name }}
    volumes: 
      - ./exports/:/app/exports
    expose: 
      - 8083
    restart: unless-stopped
